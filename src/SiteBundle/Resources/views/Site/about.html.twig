{% extends 'base.html.twig' %}


{% block body %}

 {% include('SiteBundle:partials:navbar.html.twig') %}

  <div class="container">
  
    <div class="row">
        <div class="col-md-12">
            <h1 class="mt-5">{{ myTitle }}</h1>
        </div>
    </div>       
    
    {% for index, post in myPosts %}
     <div class="row">
        
        {% if index is even  %}
            <div class="col-md-6">
                <h2>{{ post.title }}</h2>
                <p>{{ post.content }}</p>
            </div>
            <div class="col-md-6">
                <img src="{{ post.image }}" alt="{{ post.title }}">
            </div>
        
        {% else %}

            <div class="col-md-6">
                <img src="{{ post.image }}" alt="{{ post.title }}">
            </div>
            <div class="col-md-6">
                <h2>{{ post.title }}</h2>
                <p>{{ post.content }}</p> 
            </div>
         
        {% endif %} 
        
     </div>       
    {% endfor %}
  
  </div>
   
{% endblock %}